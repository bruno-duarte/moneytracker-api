{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Transactions Worker",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/MoneyTracker.Worker.Transactions/bin/Debug/net8.0/MoneyTracker.Worker.Transactions.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MoneyTracker.Worker.Transactions",
      "stopAtEntry": false,
      "console": "integratedTerminal"
    },
    {
      "name": "Run Api",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/src/MoneyTracker.Api/bin/Debug/net8.0/MoneyTracker.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/MoneyTracker.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ]
}
